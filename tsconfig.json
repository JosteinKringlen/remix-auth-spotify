{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error",

    // tsup handles building
    "noEmit": true
  },

  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
